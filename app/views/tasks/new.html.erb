<div class="container mt-4 mx-auto col-4">
<h2 class="text-center">Crear Task</h2>
  <form class="new_restaurant" action="/tasks" accept-charset="UTF-8" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :tasks, @tasks %>
    <div class="form-group">
      <label for="task_title">Title</label>
      <input type="text" class="form-control" id="task_title" name="task[title]">
    </div>
    <div class="form-group">
      <label for="task_details">Details</label>
      <input type="text" class="form-control" id="task_details" name="task[details]">
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-2"><i class="far fa-plus-square"></i> Add</button>
  </form>
</div>
